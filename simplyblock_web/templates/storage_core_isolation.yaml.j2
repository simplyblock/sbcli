apiVersion: batch/v1
kind: Job
metadata:
  name: {{ CORE_JOBNAME }}
  namespace: {{ NAMESPACE }}
spec:
  template:
    spec:
      restartPolicy: OnFailure
      nodeSelector:
        kubernetes.io/hostname: {{ HOSTNAME }}
      hostNetwork: true
      hostPID: true
      serviceAccountName: simplyblock-storage-node-sa
      tolerations:
        - effect: NoSchedule
          operator: Exists
        - effect: NoExecute
          operator: Exists
      volumes:
        - name: rootfs
          hostPath:
            path: /
        - name: var-simplyblock
          hostPath:
            path: /var/simplyblock
      containers:
        - name: init-setup
          image: ubuntu:22.04
          securityContext:
            privileged: true
          volumeMounts:
            - name: rootfs
              mountPath: /host
            - name: var-simplyblock
              mountPath: /var/simplyblock
          command: ["/bin/sh", "-c"]
          args:
            - |
              set -e

              mount --bind /proc /host/proc
              mount --bind /sys  /host/sys
              mount --bind /dev  /host/dev
              mount --bind /run  /host/run

              cp /etc/resolv.conf /host/etc/resolv.conf

              if [[ -f /host/etc/os-release ]]; then
                  source /host/etc/os-release
                  OS_ID=$ID
              else
                  echo "[ERROR] Unable to detect OS"
                  exit 1
              fi
              echo "[INFO] Detected OS: $OS_ID"

              case "$OS_ID" in
                  debian)
                      chroot /host apt update && chroot /host apt install -y grep jq nvme-cli tuned
                      ;;
                  ubuntu)
                      chroot /host apt update && chroot /host apt install -y grep jq nvme-cli tuned
                      HOST_KERNEL=$(chroot /host uname -r)
                      chroot /host apt-get install -y linux-modules-extra-$HOST_KERNEL
                      ;;
                  centos|rhel|rocky|almalinux)
                      export YUM_RELEASEVER=$(awk -F'=' '/^VERSION_ID=/{gsub(/"/,"",$2); print $2}' /host/etc/os-release)
                      export DNF_RELEASEVER=$(awk -F'=' '/^VERSION_ID=/{gsub(/"/,"",$2); print $2}' /host/etc/os-release)
                      chroot /host dnf install -y grep jq nvme-cli kernel-modules-extra tuned \
                       --setopt=tsflags=nocontexts,noscripts --setopt=install_weak_deps=False 
                      ;;
                  *)
                      echo "[WARN] OS $OS_ID not supported for automatic NVMe package installation"
                      ;;
              esac

              echo "--- Reading isolated cores from config ---"
              CONFIG_FILE="/var/simplyblock/sn_config_file"

              if [[ ! -f "$CONFIG_FILE" ]]; then
                  echo "[ERROR] Config file $CONFIG_FILE not found."
                  exit 1
              fi

              ISOLATED_CORES=$(jq -r '.isolated_cores | join(",")' "$CONFIG_FILE")
              if [[ -z "$ISOLATED_CORES" ]]; then
                  echo "[ERROR] Could not extract isolated cores from $CONFIG_FILE"
                  exit 1
              fi

              echo "[INFO] Isolated cores to apply: $ISOLATED_CORES"

              chroot /host modprobe nvme-tcp
              echo "[INFO] Loaded nvme-tcp module"

              chroot /host modprobe nvme-rdma
              echo "[INFO] Loaded nvme-rdma module"

              TUNED_PROFILE="isolated-cpu"
              TUNED_PROFILE_DIR="/host/etc/tuned/$TUNED_PROFILE"
              TUNED_PROFILE_DIR2="/host/etc/tuned/profiles/$TUNED_PROFILE"

              mkdir -p "$TUNED_PROFILE_DIR"
              mkdir -p "$TUNED_PROFILE_DIR2"

              cat <<EOF > "$TUNED_PROFILE_DIR/tuned.conf"
              [main]
              include=throughput-performance

              [cpu]
              isolated_cores=$ISOLATED_CORES

              [bootloader]
              cmdline_add=isolcpus=$ISOLATED_CORES nohz_full=$ISOLATED_CORES rcu_nocbs=$ISOLATED_CORES
              EOF

              cat <<EOF > "$TUNED_PROFILE_DIR2/tuned.conf"
              [main]
              include=throughput-performance

              [cpu]
              isolated_cores=$ISOLATED_CORES

              [bootloader]
              cmdline_add=isolcpus=$ISOLATED_CORES nohz_full=$ISOLATED_CORES rcu_nocbs=$ISOLATED_CORES
              EOF

              echo "[INFO] Tuned profile created."

              echo "[INFO] Starting tuned daemon in background..."
              /host/usr/sbin/tuned -l -P &
              TUNED_PID=$!

              for i in {1..10}; do
                  if chroot /host tuned-adm active &>/dev/null; then
                      echo "[INFO] Tuned is running."
                      break
                  else
                      echo "[INFO] Waiting for tuned to start... ($i/10)"
                      sleep 1
                  fi
              done

              if ! chroot /host tuned-adm active &>/dev/null; then
                  echo "[ERROR] Tuned failed to start. Please check logs."
                  ps aux | grep tuned
                  exit 1
              fi

              echo "[INFO] Applying tuned profile: $TUNED_PROFILE"
              chroot /host tuned-adm profile "$TUNED_PROFILE"
              case "$OS_ID" in
                  centos|rhel|rocky|almalinux)
                  chroot /host grubby --update-kernel=ALL --args="isolcpus=$ISOLATED_CORES nohz_full=$ISOLATED_CORES rcu_nocbs=$ISOLATED_CORES"
                      ;;
                  *)
                      echo ""
                      ;;
              esac

              echo "[INFO] Init setup and CPU isolation complete."
              
              echo "--- Init setup complete ---"
